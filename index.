          <h3 class="text-3xl font-bold text-indigo-600" id="stat-mins">0</h3>
          <p class="text-slate-500 text-sm">T·ªïng ph√∫t h·ªçc</p>
        </div>
        <div class="space-y-1">
          <h3 class="text-3xl font-bold text-indigo-600" id="stat-hours">0h</h3>
          <p class="text-slate-500 text-sm">T·ªïng gi·ªù h·ªçc</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Roadmap Grid -->
  <section id="roadmap" class="py-20 bg-slate-50">
